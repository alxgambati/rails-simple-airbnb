<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
    <div class="nav d-flex p-3 align-middle justify-content-between bg-light">
      <h3>Simple Airbnb</h3>
      <div class="form-group">
         <%= form_tag flats_path, method: :get, class: "form-inline" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a flat"
          %>
          <%= submit_tag "Search", class: "btn btn-outline-success" %>
          <%= link_to 'Add Flat', new_flat_path, class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
